<!DOCTYPE html>
<html lang="id">
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>History</title>
  <link rel="stylesheet" href="/css/his.css" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/js/his.js"></script>
</head>
<body class="p-3">
  <div class="container">
    <% if (history.length === 0) { %>
      <p class="text-center italic mt-3">Belum ada history.</p>
    <% } else { %>
      <% history.forEach((item, index) => { %>
        <div class="mt-3 p-3 bg-secondary max-w-2xl mx-auto text-center shadow-lg" data-index="<%= index %>" style="background-color: <%= item.status === 'true' ? 'green' : item.status === 'false' ? 'red' : '' %>;">
          <div id="date" class="text-sm italic text-white"><%= item.date %></div>
          <p class="text-xl font-bold text-white"><%= item.seed %></p>
        </div>
        <div class="mt-5">
          <table class="">
            <% for (let i = 0; i < item.data2D.length; i += 5) { %>
              <tr>
                <% for (let j = i; j < i + 5 && j < item.data2D.length; j++) { %>
                  <td>
                    <div class="ball text-center w-8 h-8 rounded-full font-bold p-1 bg-red-500 text-white focus:scale-125 focus:box-shadow transition duration-200"><%= item.data2D[j] %></div>
                  </td>
                <% } %>
              </tr>
            <% } %>
            <tr>
              <td class="p-3 h-10"></td>
            </tr>
            <tr>
              <% for (let i = 0; i < item.data1D.length; i++) { %>
                <td>
                  <div class="ball text-center w-8 h-8 rounded-full font-bold p-1 bg-red-500 text-white focus:scale-125 focus:box-shadow transition duration-200"><%= item.data1D[i] %></div>
                </td>
              <% } %>
            </tr>
          </table>
        </div>
        <hr class="border-1 border-black mt-3"></hr>
        <% if (item.status === 'neutral') { %>
        <div class="mt-3 flex max-w-2xl mx-auto justify-end p-5">
          <button class="btn-false bg-red-500 px-2 py-1 rounded-lg font-bold text-white hover:bg-red-600 transition duration-200 mx-1">Salah</button>
          <button class="btn-true bg-green-500 px-2 py-1 rounded-lg font-bold text-white hover:bg-green-600 transition duration-200">Benar</button>
        </div>
        <% } %>
      <% }) %>
    <% } %>
  </div>
</body>
</html>
